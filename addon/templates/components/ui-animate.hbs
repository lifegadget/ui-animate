{{#if hasBlock}}
  {{hasBlockJs}}
  <animation
    id="{{id}}"
    class="{{if class (concat ' ' class)}}block-animation"
    style="animation-duration: {{duration}}s; animation-iteration-count: {{iterations}};"
  >
    {{yield}}
  </animation>
{{else}}
  {{! inline uses ID of parent container as target }}
  <animation id={{id}} class="{{if class (concat ' ' class)}}inline-animation on-{{event}} animation-{{animation}}{{if domElement (concat ' target-' domElement)}}" />
{{/if}}
